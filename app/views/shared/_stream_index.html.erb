<% items.each do |item| %>
  <% if item.class.name == "Reblog" %>
    <% if item.rebloggable_type == "Track" %>
      <%= render "shared/track_show", track: item.rebloggable %>
    <% elsif item.rebloggable_type == "Playlist" %>
      <%= render "shared/playlist_preview", playlist: item.rebloggable %>
    <% end %>
  <% elsif item.class.name == "Track" %>
    <%= render "shared/track_show", track: item %>
  <% elsif item.class.name == "Playlist" %>
    <%= render "shared/playlist_preview", playlist: item %>
  <% end %>
<% end %>