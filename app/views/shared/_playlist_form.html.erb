<% if @playlists.include?(track) %>
    <form action="<%= playlist_url(track) %>" method="post">
      <%= auth_token %>
      <input type="hidden" name="_method" value="delete">
      <input type="hidden" name="playlist[creator_id]" value="<%= current_user.id %>">
      <input type="hidden" name="playlist_track[track_id]" value="<%= track.id %>">
      <input class="submit" type="submit" value="Remove">
    </form>
<% else %>
  <form action="<%= tracks_add_to_playlist_url %>" method="post">
    <%= auth_token %>
    <input type="hidden" name="playlist[creator_id]" value="<%= current_user.id %>">
    <input type="hidden" name="playlist[track]" value="<%= track.id %>">
    <input class="submit" type="submit" value="Add">
  </form>
<% end %>


