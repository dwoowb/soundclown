<!DOCTYPE html>
<html>
<head>
  <title>Soundclown</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if signed_in? %>
    <header>
      <nav class="group">
        <h1 class="logo">
          <a href="<%= users_url %>">SoundClown</a>
        </h1>

        <h1 class="stream">
          <a href="<%= users_url %>">Stream</a>
        </h1>

        <ul>
          <li>
            <a href="<%= user_url(current_user) %>">
                 <%= current_user.username %>
            </a>
          </li>
          <li>
            <a href="<%= user_tracks_url(current_user) %>">
                 Tracks
            </a>
          </li>
          <li>
            <a href="<%= user_playlists_url(current_user) %>">
                 Playlists
            </a>
          </li>
          <li>
            <a href="<%= notifications_url %>">
                Notifications
            </a>
          </li>
          <li>
            <a href="<%= new_user_track_url(current_user) %>">
                 Upload
            </a>
          </li>
          <li>
            l> || # Player
          </li>
          <li>
            <form action="<%= session_url %>" method="post">
              <%= auth_token %>
              <input type="hidden" name="_method" value="delete">
              <input class="sign-out" type="submit" value="Sign Out">
            </form>
          </li>
        <ul>
      </nav>
    </header>
<% else %>
  <header>
    <nav class="group">
      <h1 class="logo">SoundClown</h1>

      <ul>
        <li>
          <a class="sign-up" href="<%= new_user_url %>">Sign Up</a>
        </li>
      </ul>
    </nav>
  </header>
<% end %>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<section class="body">
  <%= yield %>
</section>

</body>
</html>
